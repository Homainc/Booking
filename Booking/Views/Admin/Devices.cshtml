@{
    ViewData["Title"] = "Управление оборудованием";
}

<section id="request_delete_device" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Подтвеждение удаления оборудования</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Вы действительно хотите удалить это оборудование?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button id="delete_device_btn" type="button" class="btn btn-danger">Удалить</button>
            </div>
        </div>
    </div>
</section>

<section id="edit_device_modal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Редактирование</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="edit_device_errors" class="alert alert-danger collapse" role="alert"></div>
                <form>
                    <input name="Id" readonly hidden />
                    <div class="form-group">
                        <label class="col-form-label">Наименование</label>
                        <input name="Name" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button id="edit_device_btn" type="button" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</section>

<section id="create_device_modal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Добавить новое оборудование</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="create_device_errors" class="alert alert-danger collapse" role="alert"></div>
                <form>
                    <div class="form-group">
                        <label class="col-form-label">Наименование</label>
                        <input name="Name" class="form-control" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button id="create_device_btn" type="button" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>Ид</th>
                <th>Наименование</th>
                <th>
                    <button class="btn btn-sm btn-primary" type="button" data-toggle="modal" data-target="#create_device_modal">Добавить оборудование</button>
                </th>
            </tr>
        </thead>
        <tbody id="devices_tbody"></tbody>
    </table>
    <div id="empty_list" class="empty-list collapse">
        <img src="~/images/empty.png" />
        Список пуст
    </div>
</div>

@section Scripts{
    <script src="~/js/check-empty.js" type="text/javascript"></script>
    <script src="~/js/jquery.tmpl.js" type="text/javascript"></script>
    <script id="device_tmpl" type="text/x-jquery-tmpl">
        <tr>
            <td>${id}</td>
            <td>${name}</td>
            <td>
                <button data-id="${id}" data-name="${name}" type="button" class="btn btn-outline-secondary"
                        data-toggle="modal" data-target="#edit_device_modal"
                        style="padding:0px 4px 4px 4px; margin:0px;">
                    <img src="/images/baseline_create_black_18dp.png" height="20" width="20" />
                </button>
                <button data-id="${id}" type="button" class="btn btn-outline-secondary"
                        data-toggle="modal" data-target="#request_delete_device"
                        style="padding:0px 4px 4px 4px; margin:0px;">
                    <img src="/images/baseline_delete_black_18dp.png" height="20" width="20" />
                </button>
            </td>
        </tr>
    </script>
    <script src="~/js/json-parser.js" type="text/javascript"></script>
    <script src="~/js/admin-devices.js" type="text/javascript"></script>
}