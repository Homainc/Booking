@{ 
    ViewData["Title"] = "Пользователи";
}

<section id="request_delete_user" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Подтвеждение</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Вы действительно хотите удалить этого пользователя?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button id="delete_user_btn" type="button" class="btn btn-danger">Удалить</button>
            </div>
        </div>
    </div>
</section>

<section id="edit_user_modal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Редактирование</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pr-4">
                <form>
                    <input type="text" name="Id" readonly hidden />
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">Имя</label>
                        <input type="text" name="Name" class="col-lg-9 form-control" />
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">Фамилия</label>
                        <input type="text" name="Surname" class="col-lg-9 form-control" />
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">E-mail</label>
                        <input type="email" name="Email" class="col-lg-9 form-control"/>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">Роль</label>
                        <select class="col-lg-9 custom-select custom-select-sm" name="Role">
                            <option value="user">user</option>
                            <option value="admin">admin</option>
                            <option value="manager">manager</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button id="edit_user_btn" class="btn btn-primary">Сохранить</button>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <table class="table">
        <thead>
            <tr>
                <th>Роль</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>E-mail</th>
                <th>Почта подверждена</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="users_tbody"></tbody>
    </table>
</div>

@section Scripts{
<script src="~/js/jquery.tmpl.js" type="text/javascript"></script>
<script id="user_tmpl" type="text/x-jquery-tmpl">
    <tr>
        <td>${roleName}</td>
        <td>${name}</td>
        <td>${surname}</td>
        <td>${email}</td>
        <td>${isEmailConfirmed? 'Да': 'Нет'}</td>
        <td>
            <button data-id="${id}" data-name="${name}" data-surname="${surname}" data-email="${email}"
                    data-rname="${roleName}" type="button" class="btn btn-outline-secondary"
                    data-toggle="modal" data-target="#edit_user_modal"
                    style="padding:0px 4px 4px 4px; margin:0px;">
                <img src="/images/baseline_create_black_18dp.png" height="20" width="20" />
            </button>
            <button data-id="${id}" type="button" class="btn btn-outline-secondary"
                    data-toggle="modal" data-target="#request_delete_user"
                    style="padding:0px 4px 4px 4px; margin:0px;">
                <img src="/images/baseline_delete_black_18dp.png" height="20" width="20" />
            </button>
        </td>
    </tr>
</script>
<script src="~/js/json-parser.js" type="text/javascript"></script>
<script src="~/js/admin-users.js" type="text/javascript"></script>
}