@model RoomFormViewModel

<section id="create_room_modal" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Добавить новое помещение</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pr-4">
                <div id="create_room_errors" class="alert alert-danger collapse" role="alert"></div>
                <form id="create_room_form">
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label" asp-for="Number">Номер</label>
                        <div class="col-lg-9">
                            <input type="text" asp-for="Number" class="form-control" />
                            <span class="small" asp-validation-for="Number"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label" asp-for="Floor">Этаж</label>
                        <div class="col-lg-9">
                            <input type="number" asp-for="Floor" min="1" class="form-control" />
                            <span class="small" asp-validation-for="Floor"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">Информация</label>
                        <div class="col-lg-9">
                            <textarea rows="3" name="Info" class="col-lg-9 form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-3 col-form-label">Здание</label>
                        <div class="col-lg-9">
                            @Html.DropDownList("buildings", ViewBag.BuildingsList as SelectList,
                            htmlAttributes: new { @name = "BuildingId", @class = "custom-select custom-select-sm" })
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button id="create_room_btn" class="btn btn-primary">Добавить</button>
            </div>
        </div>
    </div>
</section>
